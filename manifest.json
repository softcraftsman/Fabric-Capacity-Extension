{
  "manifest_version": 3,
  "name": "Fabric Capacity Extension",
  "description": "An Edge extension for managing Fabric Capacities",
  "version": "1.0",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://management.azure.com/*",
    "https://login.microsoftonline.com/*",
    "https://graph.microsoft.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://management.azure.com https://login.microsoftonline.com https://graph.microsoft.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fabric Capacity Extension",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
